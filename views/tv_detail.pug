extends layout 

block content
    .tvDetails 
        h1 #{tv.brand.name + " " + tv.screen_size + "-Inch " + tv.model_name}
        .tvMeta 
            div 
                h3 Screen Size
                p #{tv.screen_size}
            div 
                h3 Brand
                p #{tv.brand.name}
            div 
                h3 Special Features
                p #{tv.special_features}
            div 
                h3 Internet Services
                p #{tv.supported_internet_services}
            div 
                h3 Resolution
                p #{tv.resolution}
            div 
                h3 Refresh Rate
                p #{tv.refresh_rate}
            div 
                h3 Model Name
                p #{tv.model_name}
            div 
                h3 Price
                p #{tv.price}
            div 
                h3 Number In Stock 
                p #{tv.number_in_stock}
            div 
                h3 Category
                div(class="tvCategory") 
                    each val, index in tv.category
                        a(href=val.url) #{val.name}
                        if index < tv.category.length - 1
                            |,
        .updateDeleteLinks 
            a(href=tv.url + "/update") Update TV 
            a(href=tv.url + "/delete") Delete TV
       
            


            